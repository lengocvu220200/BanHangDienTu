@model IEnumerable<BanHangDienTu.Models.sanpham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCustomize.cshtml";
}
<!-- Start Slider -->
<div id="slides-shop" class="cover-slides">
    <ul class="slides-container">
        <li class="text-center">
            <img src="~/asset/images/nen1.png" alt="">
            
        </li>
        <li class="text-center">
            <img src="~/asset/images/nen2.png" alt="">
            
        </li>
        <li class="text-center">
            <img src="~/asset/images/nen3.png" alt="">
            
        </li>
    </ul>
    <div class="slides-navigation">
        <a href="#" class="next"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
        <a href="#" class="prev"><i class="fa fa-angle-left" aria-hidden="true"></i></a>
    </div>
</div>
<!-- End Slider -->

<div class="products-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Sản phẩm nổi bậc</h1>
                    <p>Cùng trải nghiệm các sản phẩm đọc quyền đến từ cửa hàng.</p>
                </div>
            </div>
        </div>
        <div class="row special-list">
            @foreach (var item in ViewBag.DS)
            {
                <div class="col-lg-3 col-md-6 special-grid best-seller">
                    <div class="products-single fix">
                        <div class="box-img-hover" style="height:280px; ">
                            <div class="type-lb">
                                
                            </div>
                            <a href="@Url.Action("ChiTietSanPham","SanPham", new { id = item.sanpham_id } )"><img src="~/asset/images/@item.sanpham_urlhinhanh" class="img-fluid" alt="Image"></a>
                            
                        </div>
                        <div class="why-text">
                            <h4>@item.sanpham_ten</h4>
                            <h5> @String.Format("{0:0,0}", item.sanpham_dongia) VNĐ</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
